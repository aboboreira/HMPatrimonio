        <activity android:name=".activity.MainActivity"/>
        
        <activity android:name=".activity.PatrimonioActivity"/>
        
        <activity android:name=".activity.ConsultarConferenciaActivity"/>
        
        <activity android:name=".activity.FragAgendadas"/>
        
